@model List<Itunes.Domain.ItuneClicks>


@{
    ViewData["Title"] = "Itunes";
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Clicks</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="@Url.Action("Index", "Itunes")" class="text-muted text-hover-primary">Itune</a>
                </li>
            </ul>
        </div>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a href="@Url.Action("Index", "Itunes")" class="btn btn-sm fw-bold btn-primary">Back</a>
        </div>
    </div>
</div>

<div class="app-container container-xxl">
    <div class="row g-5 g-xl-8">
        <div class="card card-xl-stretch mb-5 mb-xl-8">
            <div class="card-body pt-3">
                @if (Model.Count <= 0)
                {
                    <div class="d-flex align-items-sm-center mb-7">
                        <div class="d-flex flex-row-fluid align-items-center flex-wrap my-lg-0 me-2">
                            <div class="flex-grow-1 my-lg-0 my-2 me-2">
                                <span class="text-gray-800 fw-bold text-hover-primary fs-6">No Clicks</span>
                                <span class="text-muted fw-semibold d-block pt-1">Please go to iTunes page and make some clicks</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="me-6">
                                    <span class="text-gray-800 fw-bold">0 Clicks</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @foreach (var item in Model)
                {
                    <div class="d-flex align-items-sm-center mb-7">
                        <div class="d-flex flex-row-fluid align-items-center flex-wrap my-lg-0 me-2">
                            <div class="flex-grow-1 my-lg-0 my-2 me-2">
                                <span class="text-gray-800 fw-bold fs-6">@item.TrackName</span>
                                <span class="text-muted fw-semibold d-block pt-1">@item.CollectionName</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="me-6">
                                    <span class="text-gray-800 fw-bold">@item.TotalClicks Clicks</span>
                                </div>
                                <a href="#" class="btn btn-icon btn-light btn-sm border-0">
                                    <span class="svg-icon svg-icon-2 svg-icon-primary">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <rect opacity="0.5" x="18" y="13" width="13" height="2" rx="1" transform="rotate(-180 18 13)" fill="currentColor"></rect>
                                            <path d="M15.4343 12.5657L11.25 16.75C10.8358 17.1642 10.8358 17.8358 11.25 18.25C11.6642 18.6642 12.3358 18.6642 12.75 18.25L18.2929 12.7071C18.6834 12.3166 18.6834 11.6834 18.2929 11.2929L12.75 5.75C12.3358 5.33579 11.6642 5.33579 11.25 5.75C10.8358 6.16421 10.8358 6.83579 11.25 7.25L15.4343 11.4343C15.7467 11.7467 15.7467 12.2533 15.4343 12.5657Z" fill="currentColor"></path>
                                        </svg>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>